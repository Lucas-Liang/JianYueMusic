<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/downlaod_popu_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/top_fillet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/name_download"
        android:textSize="20dp"
        android:gravity="center"
        android:text="当前选择：成都-差点"
        android:textColor="@android:color/black"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/start_download"
        android:textSize="20dp"
        android:gravity="center"
        android:text="@string/StartDownload"
        android:textColor="@color/main_1"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGray"/>

    <TextView
        android:id="@+id/stop_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="@string/StopDownload"
        android:textSize="20dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/Gray"/>
    <TextView
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/delete_download"
        android:textSize="20dp"
        android:gravity="center"
        android:text="@string/DeteleDownload"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>